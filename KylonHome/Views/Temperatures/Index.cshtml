@model IEnumerable<KylonHome.Models.Temperature>

@{ 
    ViewData["Title"] = "温湿度数据查询";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a asp-action="Create">增加新记录</a>
</p>
<!-- 搜索、查詢功能 -->
@using (Html.BeginForm("Index", "Temperatures", FormMethod.Get))
{
    <div>
        <pre>
    @Html.DisplayNameFor(model => model.DeviceName): @Html.TextBox("DeviceName")&nbsp; @Html.DisplayNameFor(model => model.AcquisitionTime)范围: @Html.TextBox("Begin") - @Html.TextBox("End")
<br />&nbsp;&#9;<input type="submit" value="查  询" />&nbsp;&#9;<button id="toExcel" name="toExcel">导出报表到Excel</button>
</pre>
    </div>
}
<div id="mainChart" style="width: 1000px;height: 400px;"></div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DeviceName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Temp)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Humidity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AcquisitionTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Memo)
            </th>
            <th>操  作</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.DeviceName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Temp)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Humidity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AcquisitionTime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Memo)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ID">编辑</a> |
                    <a asp-action="Details" asp-route-id="@item.ID">详情</a> |
                    <a asp-action="Delete" asp-route-id="@item.ID">删除</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<script type="text/javascript" src="~/js/echarts.common.min.js"></script>
<script type="text/javascript">
        //基于准备好的dom，初始化echarts实例
    var myChart = echarts.init(document.getElementById('mainChart'));
        //指定图表的配置项和数据
        var option={
             title:{
                 text:'温湿度图表'
             },
             tooltip:{},
             legend:{
                 data:['温度','湿度']
              },
             xAxis: {
                data:@Html.Raw(
                      Json.Serialize(
                          Model.OrderBy(t=>t.AcquisitionTime)
                                .Select(t => t.AcquisitionTime.ToString("yyyy/MM/dd HH:mm")
                              )
                          )
                      )
              },
             yAxis:{},
             series:[
                {
                  name:'温度',
                  type:'line',
                  data:@Html.Raw(
                      Json.Serialize(
                          Model.OrderBy(t=>t.AcquisitionTime)
                          .Select(t=>t.Temp)
                          )
                      )
                },
                {
                    name: '湿度',
                    type: 'line',
                    data:@Html.Raw(
                        Json.Serialize(
                            Model.OrderBy(t=>t.AcquisitionTime)
                            .Select(t=>t.Humidity)
                            )
                        )
                }
             ]
        };

        //使用刚指定的配置项和数据显示图表
        myChart.setOption(option);
</script>